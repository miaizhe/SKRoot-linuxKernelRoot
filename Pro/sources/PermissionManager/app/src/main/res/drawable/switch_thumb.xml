<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 开启状态时的滑块 -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- 白色滑块 -->
            <size android:width="30dp" android:height="30dp"/> <!-- 滑块大小 -->
            <stroke android:color="#E0E0E0" android:width="2dp"/> <!-- 增加细描边 -->
        </shape>
    </item>
    <!-- 关闭状态时的滑块 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- 灰色滑块 -->
            <size android:width="30dp" android:height="30dp"/>
            <stroke android:color="#E0E0E0" android:width="2dp"/> <!-- 细描边 -->
        </shape>
    </item>
</selector>
